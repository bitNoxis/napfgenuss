---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Wir helfen Ihnen gerne weiter" title="Kontakt" />

  <ContactUs
    id="form"
    title="Schreiben Sie uns Ihr Anliegen"
    subtitle="Unser Expertenteam steht Ihnen bei Problemen oder Fragen jeglicher Art immer zur Verfügung."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Nachricht',
    }}
    disclaimer={{
      label:
        "Bitte akzeptieren Sie unsere Datenschutzbedingungen",
    }}
    button={{
      text:'Absenden', variant: 'primary', 
    }}
    description="Unser Team antwortet Ihnen innerhalb von 24 Stunden"
    errors={{}},
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Wir sind da, um Ihnen zu helfen!"
    items={[
      {
        title: 'Allgemeine Unterstützung',
        description: `Schreiben Sie mit uns - sei es, ein Problem bei der Zusammenstellung, Fragen zu den Inhaltstoffen oder tierärtzliche Anliegen. `,
      },
      {
        title: 'Tierärtzliche Unterstzützung',
        description:
          'Wir helfen Ihnen bei Tierärtzlichen Anliegen gerne weiter und finden Zusammen mit Ihnen eine Parnter-Praxis in Ihrer Nähe, die Ihnen so schnell wie möglich helfen wird.',
      },
      {
        title: 'Technische Unterstützung',
        description:
          'Haben Sie Probleme bei der Zusammenstellung Ihres Futters? Rufen oder Schreiben Sie uns gerne an. Viele der Fragen werden auch schon in den "Oft gestellten Fragen" geklärt.',
      },
      {
        title: 'Telefon',
        description: '+49 123 456789',
        icon: 'tabler:headset',
      },
      {
        title: 'Schreiben Sie mit uns!',
        description: 'info@napfgenuss-shop.de',
        icon: 'tabler:mail',
      },
      {
        title: 'Firmensitz',
        description: 'Universitätsallee 1B, 21335 Lüneburg',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>