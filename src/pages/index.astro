      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Sie haben Fragen?"
    subtitle="Wir freuen uns auf Ihre Nachricht"
    callToAction={{
      text: 'Jetzt kontaktieren',
      href: '/',
    }}
    items={[
      {
        title: 'E-Mail',
        description: 'info@napfgenuss-shop.de',
        icon: 'tabler:mail',
      },
      {
        title: 'Anrufen',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Social Media',
        description: '@napfgenuss-shop',
        icon: 'tabler:brand-instagram',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Unser hundeernährungsblog"
    information={`Lesen Sie die neuesten Beiträge zu Hundeernährung, Gesundheit und Wohlbefinden.`}
