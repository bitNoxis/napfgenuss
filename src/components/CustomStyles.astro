---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #7DB03A;
    --primary-gradient: linear-gradient(to right, var(--aw-color-primary), var(--aw-color-secondary));
    --aw-color-secondary: #385317;
    --aw-color-tertiary: #161616;
    --aw-color-accent: #CBBD93;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #7DB03A;
    --primary-gradient: linear-gradient(to right, var(--aw-color-primary), var(--aw-color-secondary));
    --aw-color-secondary: #7DB03A;
    --aw-color-tertiary: #161616;
    --aw-color-accent: #CBBD93;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(4, 34, 9);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
