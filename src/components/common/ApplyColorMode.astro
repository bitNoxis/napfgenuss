---
import { UI } from 'astrowind:config';
// Falls du sonst keine config brauchst, kannst du auch diesen Import weglassen
---

<script is:inline>
  // Immer Light Theme erzwingen
  document.documentElement.classList.remove('dark');
  document.documentElement.classList.add('light');

  // Optional: Wenn du noch das Toggle-Element hast und sicherstellen willst,
  // dass es nicht "Dark" anzeigt:
  const toggles = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');
  toggles.forEach((toggle) => {
    // Hier je nach deinem Setup anpassen:
    // false = "Light" / true = "Dark" (kann in deinem Projekt auch umgekehrt sein)
    toggle.checked = false;
  });
</script>
